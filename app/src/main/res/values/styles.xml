<resources>

    <!--=============== base ===============-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/normal</item>
        <item name="colorControlNormal">@color/my_dark_gray</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">20dp</item>
    </style>

    <!--=============== MyPage ===============-->
    <style name="mypage_layout" parent="parent">
        <item name="android:layout_marginTop">@dimen/margin_big</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="mypage_details_layout" parent="parent">
        <item name="android:layout_marginTop">@dimen/margin_big</item>
    </style>
    <style name="mypage_details_image">
        <item name="android:layout_width">@dimen/image_detail</item>
        <item name="android:layout_height">@dimen/image_detail</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="mypage_details_mainText" parent="viewParent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>
    <style name="mypage_details_miniText" parent="viewParent">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_mini</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
    </style>
    <style name="mypage_details_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/white2</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="mypage_list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray2</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="mypage_list_image">
        <item name="android:layout_width">@dimen/image_list</item>
        <item name="android:layout_height">@dimen/image_list</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>

    <!--=============== Info ===============-->
    <style name="info_title" parent="parent">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    <style name="info_image" parent="parent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="info_detail_layout" parent="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="info_details_layout" parent="parent">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>
    <style name="info_details_image">
        <item name="android:layout_width">@dimen/image_detail</item>
        <item name="android:layout_height">@dimen/image_detail</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="info_details_text" parent="viewParent">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="info_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!--=============== List ===============-->
    <style name="list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="list_mainText" parent="parent">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!--=============== Status ===============-->
    <style name="status_avatars">
        <item name="android:layout_width">@dimen/status_avatar_image</item>
        <item name="android:layout_height">@dimen/status_avatar_image</item>
        <item name="android:layout_margin">@dimen/margin_normal</item>
    </style>
    <style name="status_detail_mainText" parent="parent">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="status_detail_miniText" parent="parent">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
</resources>
